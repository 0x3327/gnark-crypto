func (t *ElementTriplet) writeKey(sb *strings.Builder) {
	sb.WriteString("\"")
	sb.WriteString(t.key1.String())
	if t.key2Present {
		sb.WriteRune(',')
		sb.WriteString(t.key2.String())
	}
}

